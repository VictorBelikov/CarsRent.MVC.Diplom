@model CarsRentEF.Models.Option

@{
    ViewBag.Title = "Option Delete";
}

<div class="well well-sm"><h1>Удалить еденицу доп. оборудования</h1></div>
<h3>Вы уверены, что хотите удалить?</h3>

<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            ID
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OptionId)
        </dd>

        <dt>
            Наименование
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Инв. номер
        </dt>

        <dd>
            @Html.DisplayFor(model => model.InvNumber)
        </dd>

        <dt>
            Полная стоимость
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FullCost)<span> $</span>
        </dd>

        <dt>
            Стоимость аренды в сут.
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RentDayCost)<span> $</span>
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(x => x.OptionId)
        @Html.HiddenFor(x => x.Timestamp)
        <div class="form-actions no-color">
            <button type="submit" class="btn btn-danger">
                <span class="glyphicon glyphicon-trash"></span>&nbsp;Удалить
            </button>
            &nbsp;&nbsp;
            <a href="@Url.Action("Index")" class="btn btn-default">
                <span class="glyphicon glyphicon-list"></span>&nbsp;К списку
            </a>
        </div>
    }
</div>
