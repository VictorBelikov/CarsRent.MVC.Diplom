@model CarsRentEF.Models.Penalty

@{
    ViewBag.Title = "Penalty Delete";
}

<div class="well well-sm"><h1>Удалить штраф</h1></div>
<h3>Вы уверены, что хотите удалить?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.НаименованиеШтрафа)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.НаименованиеШтрафа)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.СуммаШтрафа)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.СуммаШтрафа)<span> $</span>
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(x => x.ШтрафID)
        @Html.HiddenFor(x => x.Timestamp)
        <div class="form-actions no-color">
            <button type="submit" class="btn btn-danger">
                <span class="glyphicon glyphicon-trash"></span>&nbsp;Удалить
            </button>
            &nbsp;&nbsp;
            <a href="@Url.Action("Index")" class="btn btn-default">
                <span class="glyphicon glyphicon-list"></span>&nbsp;К списку
            </a>
        </div>
    }
</div>
